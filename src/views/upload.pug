extends base

block content
	div.upload__container
		div.upload__video
			video#preview
			button#actionBtn.social__btn Start Recording
		if errorMessage 
			span=errorMessage
		form(method="POST", enctype="multipart/form-data")
			label(for="video") Video File
			input(type="file", accept="video/*", id="video", name="video", required)
			label(for="thumb") Thumbnail File
			input(type="file", accept="image/*", id="thumb", name="thumb", required)
			input(name="title", placeholder="Title", required, type="text", maxlength=80)
			input(name="description",placeholder="Description", required, type="text", minlength=10)
			input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, type="text")
			input(value="Upload Video", type="submit")

block scripts
	script(src="/static/js/videoRecorder.js")