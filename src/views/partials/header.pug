header
	a(href="/").header__logo
		i.fab.fa-youtube
	nav 
		ul 
			li 
				a(href="/search") 
					i.fas.fa-search
			if loggedIn
				li 
					a(href="/users/edit") Edit Profile
				li 
					a(href="/users/logout") Logout
				li 
					a(href="/videos/upload") Upload
				li 
					a(href=`/users/${loggedInUser._id}`)
						if loggedInUser.avatarUrl === undefined
							span.header__emoti 😍
						else 
							if loggedInUser.avatarUrl.includes("github")
								img.header__avatar(src=loggedInUser.avatarUrl)
							else
								img.header__avatar(src=loggedInUser.avatarUrl)
								//- img.header__avatar(src="/"+loggedInUser.avatarUrl)
			else 
				li 
					a(href="/login") Login 
				li 
					a(href="/join").header__btn Sign up